<mapper namespace="com.zxxk.mapper.PersonMapper">
	<!-- SQLç‰‡æ®µ -->
	<sql id="cols">id,user_name,age,remark</sql>

	<!-- ä¸­é—´ï¼Œå¯¹è±¡çš„å±žæ?§å’Œç»“æžœé›†çš„å­—æ®µä¹‹é—´çš„å¯¹åº”å…³ç³? -->
	<resultMap type="cn.itcast.domain.Person" id="personRM">
		<!-- ä¸»é”®æ˜ å°„ -->
		<id property="id" column="ID"/>
		<!-- æ™®é?šå­—æ®? propertyæŒ‡å®žä½“çš„å±žæ?§ï¼›columnç»“æžœé›†çš„å­—æ®µåç§° -->
		<result property="name" column="USER_NAME"/>
		<result property="age" column="AGE"/>
		<result property="remark" column="REMARK"/>
		
		<!-- å¯¹è±¡å…³è” -->
		<!-- äººå‘˜å’Œäººå‘˜ä¿¡æ¯è¡¨ä¸?å¯¹ä¸€å…³ç³» -->
		<association property="personInfo" javaType="cn.itcast.domain.PersonInfo">
			<id property="id" column="ID"/>	
			<result property="station" column="STATION"/>
			<result property="joinDate" column="JOIN_DATE"/>
		</association>
	</resultMap>

	<select id="findall" parameterType="map" resultMap="personRM">
		select * from person

	</select>

	<!-- æŸ¥è¯¢ï¼Œæ³¨æ„Mybatisä¸­å¦‚æžœæœ‰å¡«å†™é›†åˆç±»åž‹ï¼Œåªå¡«å†™é›†åˆä¸­å…ƒç´ çš„ç±»åž‹  -->
	<select id="find" parameterType="map" resultMap="personRM">
		select <include refid="cols"/> from person
		<where>
		<if test="name!=null">and user_name like #{name}</if>
		<if test="ageStart!=null">and age >= #{ageStart}</if>
		<if test="ageEnd!=null"><![CDATA[and age <=]]> #{ageEnd}</if>
		</where>
	</select>
	
	<!-- æŸ¥è¯¢ä¸?ä¸ªï¼ŒæŒ‰idæŸ¥è¯¢ -->
	<select id="get" parameterType="int" resultType="cn.itcast.domain.Person">
		select<include refid="cols"/>from person
		where id = #{pid}
	</select>
	
	<!-- æ–°å¢ž -->
	<insert id="insert" parameterType="cn.itcast.domain.Person">
		insert into person
		(<include refid="cols"/>)
		values
		(#{id},#{name},#{age},#{remark})
	</insert>
	
	<!-- ä¿®æ”¹ -->
	<update id="update" parameterType="cn.itcast.domain.Person">
		update person
		<set>
			<if test="name!=null">user_name=#{name},</if>
			<if test="age!=null">age=#{age},</if>
			<if test="remark!=null">remark=#{remark},</if>
		</set>
		where id = #{id}
	</update>
	
	<!-- åˆ é™¤ä¸?æ? -->
	<delete id="deleteById" parameterType="int">
		delete from person
		where id = #{pid}
	</delete>
	
	<!-- åˆ é™¤å¤šæ¡ï¼Œæ•´å½¢æ•°ç»? -->
	<delete id="deleteArray" parameterType="int">
		delete from person 
		where id in
		(
		<foreach collection="array" item="id" separator=",">
			#{id}	
		</foreach>
		)
	</delete>
	
	<!-- åˆ é™¤å¤šæ¡ï¼ŒLISTé›†åˆ -->
	<delete id="deleteList" parameterType="int">
		delete from person
		where id in
		<foreach collection="list" item="id" open="(" close=")" separator=",">
			#{id}
		</foreach>
	</delete>
	
	<!-- åˆ é™¤å¤šæ¡,Map , ids ä»£è¡¨mapä¸­key -->
	<delete id="deleteMap" parameterType="map">
		delete from person
		where id in
		<foreach collection="ids" item="id" open="(" close=")" separator=",">
			#{id}
		</foreach>		
	</delete>
	
	<!-- èŽ·å–è®°å½•æ€»æ•° -->
	<select id="count" resultType="int">
		SELECT COUNT(*) FROM person
	</select>
</mapper>